  %>
 <p><b><%- station[ans2[0]].name %></b></p>  <i style='font-size:18px;margin: 5px;color: green;' class='fa'>&#xf0a9;</i><p><b><%- station[ans2[l-1]].name %></b></p> 
 <% } %>
</div>
 <br><br>
  <div id="showroute" style="width: 300px; margin-left:auto;margin-right:auto">
    <% var b='' 
    for(const a in ans2){ %>
      <div style="color:white;opacity: 0.8
          ; background-color:<%- station[ans2[a]].line[0] %>">
        <% 
        if(station[ans2[a]].line[0] ==b || a == 0) { %>
          <p>
            <%- station[ans2[a]].name %> 
          </p>
          <% if(a !=ans2.length-1) { %>
            <i class='fa fa-arrow-down' style='font-size:13px;color:white'></i>
            <% } 
             } 
            else if (station[ans2[a]].line[0] !=b && a!=0){ %>
             
              <h6 style="background-color: white;">Change here</h6>
              <%- station[ans2[a]].name %> <br>
              <% if(a !=ans2.length-1) { %>
