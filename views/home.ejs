  <br>
  <div id="header" class="d-flex justify-content-around" style="width: fit-content;padding:5px;margin-left:auto;margin-right:auto;background-color: aliceblue;"> 
    <% let l1 = ans3.length
        let j   = 0
    if( l1 > 0 ){ 
      let l2 = ans3[l1-1].length 
    %>
   <p><b><%- station[ans3[0][0]].name %></b></p> <span class="material-symbols-outlined">
  arrow_circle_right
  </span><p><b><%- station[ans3[l1-1][l2-1]].name %></b></p> 
   <% } %>
  </div>
  <br>
  
  <div id="adddetail" style="width: fit-content;padding:5px;margin-left:auto;margin-right:auto;background-color: aliceblue;">
    <%
    
    if(l1>0){ 
    let l2 = ans3[l1-1].length 

    let distance  = 0
    for(i=0;i< l1;i++){
      distance += Math.abs(station[ans3[i][ans3[i].length-1]].dist - station[ans3[i][0]].dist)
    }
    
    if(l>0){  %>
     
      <% if(distance <= 2 ){ %>
        <b>Token Fare :</b><i>10rs</i><br><b>Card Fare :</b><i>8-9rs</i><br>
       
  <% }
   else if (distance <= 5){  %>
     <b>Token Fare :</b><i>20rs</i><br><b>Card Fare :</b><i>16-18rs</i><br>
     
  <% }
  else if(distance <=12){ %>
   <b>Token Fare :</b><i>30rs</i><br><b>Card Fare :</b><i>24-27rs</i><br>
  
  <% }
  else if(distance <= 21){ %>
   <b>Token Fare :</b><i>40rs</i><br><b>Card Fare :</b><i>32-36rs</i><br>
   
  <% }
  else if(distance <= 32 ){ %>
   <b>Token Fare :</b><i>50rs</i><br><b>Card Fare :</b><i>40-45rs</i><br>
  
  <% }
  else{ %>
   <b>Token Fare :</b><i>60rs</i><br><b>Card Fare :</b><i>48-54rs</i><br>
  
  <% } %>

  
  <b>Time :</b><i><%- parseInt(distance*2) %></i>min <br>
  <b>Distance :</b><i><%- parseInt(distance) %></i> Km <br>
  <b>Stations :</b><i><%- l-l1+1+1 %></i>  <br>
  <% }} %>
   </div>
 <br>
 <br>
  <div id="showroute" style="width: 300px; margin-left:auto;margin-right:auto">
    <%
    
     for(const lines in ans3){ %>
        <% for (const node in ans3[lines]) { %>
          <div style="background-color:<%- station[ans3[lines][node]].line[0] %> ;" class="station_name">
                
            <% if(station[ans3[lines][node]].line[0] == 'blue' || station[ans3[lines][node]].line[0] == 'red' || station[ans3[lines][node]].line[0] == 'green' ){
              j = j+1
              %> 
              <b style="color:white ;">  <%-  station[ans3[lines][node]].name %> </b>
          <%  }
          else{ 
            j = j+1
            %>
            <b>  <%-  station[ans3[lines][node]].name %> </b>
         <% } %>
          </div>
            <% if(j!=l){ 
              
              %>
             
          <span style="size: 12px;color:<%- station[ans3[lines][node]].line[0] %> " class="material-symbols-outlined">
            arrow_downward
            </span>
            <% } %>
          <%  } %>
       <br>

        <% if(j!=l ){
          if(station[ans2[j]].line[0] != station[ans2[j-1]].line[0]){ 
          
          %>
         
         Now you are at  <%-  station[ans3[lines][ans3[lines].length-1]].name %>, move towards <%-  station[ans3[lines][ans3[lines].length-1]].line[1] %> line
       <% }} %>
